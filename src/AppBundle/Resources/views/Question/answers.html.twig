{% if answers|length() > 0%}
            <div class="row">
                <div class="col-md-12">
                    {% if answers|length() == 1 %}
                        <h4>{{answers|length()}} answer</h4>
                    {% else %}
                        <h4>{{answers|length()}} answers</h4>
                    {% endif %}
                </div>
            </div>
        {% endif %}
        {% for answer in answers %}
            <div class="row">
                <div class="col-md-10">
                    {{answer.body}}
                </div>
            </div>
            <div class="row">
                <div class="col-md-1">
                    <a href="#">{{answer.authorLabel}}</a>
                </div>
                <div class="col-md-2">
                    {{answer.createdAt|date("d. m. 'y. G:i")}}h
                </div>
            </div>
            {% if question_comments|length>0 %}
                {% for comment in answer_comments %}
                    <div class="row">
                        <div class="col-md-1">&nbsp;</div>
                        <div class="col-md-11" style="font-size:small;">
                            {{ comment.body }} - <a href="#">{{ comment.author.name ~' '~ comment.author.surname}}</a>
                            {{ comment.createdAt|date("d.m.'y. G:i")}}h
                        </div>
                    </div>
                {% endfor %}
                
            {% endif %}
        {% endfor %}
