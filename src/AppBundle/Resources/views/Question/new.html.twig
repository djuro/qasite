{% extends "AppBundle::layout.html.twig" %}

{% block body %}
    {% include "AppBundle::header.html.twig" %}
    <section id="featured">
			<!-- start slider -->
			<div class="container">
    <form novalidate action="" method="post">
  <div class="form-group">
    <div class="row">
        <div class="col-md-2">
            {{form_label(form.title)}}
        </div>
        <div class="col-md-4">
            {{form_widget(form.title,{'attr':{'class':'form-control'}})}}
            {{form_errors(form.title)}}
        </div>
    </div>
        <div>&nbsp;</div>
    <div class="row">
        <div class="col-md-2">
            {{form_label(form.body)}}
        </div>
        <div class="col-md-4">
            {{form_widget(form.body,{'attr':{'class':'form-control'}})}}
            {{form_errors(form.body)}}
        </div>
        <div class="col-md-4">
            {{form_widget(form._token)}}
        </div>
    </div>
        <div class="row">
            <div class="col-md-4">
                <button type="submit" class="btn btn-default">Post Question</button>
            </div>
        </div>
    </div>
    </form>
    </div>
    </section>
{% endblock body %}
